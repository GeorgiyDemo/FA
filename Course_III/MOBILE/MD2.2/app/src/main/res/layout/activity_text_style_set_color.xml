<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TextStyleSetColor">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <Button
            android:id="@+id/redColorButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Красный" />

        <Button
            android:id="@+id/greenColorButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Зеленый" />

        <Button
            android:id="@+id/blueColorButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Синий" />

        <Button
            android:id="@+id/pinkColorButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Розовый" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>